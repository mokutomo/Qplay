<div class="container">

			<h1 class ="text-center">休日投稿編集</h1>

			<%= form_for [@blog,@content] do |f| %>

<div class="form-group">
			    <h4>施設の名前を編集してね</h4>
			    <%= f.text_field :content_title,class:"form-control" %>
			</div>
			<div class="form-group">
			    <h4>本文を編集してね</h4>
			    <%= f.text_area :body,class:"form-control" %>
			</div>
			<div class="form-group">
			    <h4>URLを編集してね</h4>
			    <%= f.text_field :url,class:"form-control" %>
			</div>
			    <h4>とっておきの一枚</h4>
			    <%= f.attachment_field :image %>



			    <%= f.submit '編集完了',class: "btn btn-primary" %>
			    <%= link_to "削除", blog_content_path(@content), method: :delete,class: "btn btn-primary" %>


			<% end %>
	</div>
